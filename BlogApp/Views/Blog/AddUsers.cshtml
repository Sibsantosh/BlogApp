@{
    var isEdit = ViewBag.isEdit;
    var isLoggedIn = Program.isLoggedIn;
    var isAdmin = Program.isAdmin;
    var registerModel = (BlogUsers) ViewBag.blogUser;

}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add User</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
        }

        .container {
        max-width: 400px;
        margin: auto;
        }

        .form-group {
        margin-bottom: 20px;
        }

        .form-group label {
        display: block;
        font-weight: bold;
        }

        .form-group input[type="text"],
        .form-group input[type="password"],
        .form-group input[type="email"],
        .form-group select {
        width: 100%;
        padding: 8px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        }

        .form-group input[type="submit"] {
        width: auto;
        padding: 10px 20px;
        font-size: 16px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        }

        .form-group input[type="submit"]:hover {
        background-color: #0056b3;
        }
    </style>
</head>
<body>
    @if (isEdit == true && isAdmin == true)
    {
        <div class="container">
            <h2>Edit User</h2>
            <form method="post" asp-action="UpdateUsersInDB">
                <div class="form-group">
                    <input type="hidden" name="User_id" id="User_id" value="@registerModel.User_id" />
                    <label for="name">Name:</label>
                    <input type="text" id="Usernae" name="Username" value="@registerModel.Username" required>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" value="@registerModel.Password" name="password" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" value="@registerModel.Email" id="Email" name="Email" required>
                </div>
                <div class="form-group">
                    <label for="Role">Role:</label>
                    <select id="Role" name="Role" required>
                        @if (registerModel.Role == 1)
                        {
                            <option value="1" selected>Regular User</option>
                            <option value="2">Special User</option>
                            <option value="3">Admin</option>
                            <option value="4">Blocked</option>
                        }
                        else if(registerModel.Role == 2)
                        {
                            <option value="1" >Regular User</option>
                            <option value="2" selected>Special User</option>
                            <option value="3">Admin</option>
                            <option value="4">Blocked</option>
                        }
                        else if(registerModel.Role ==3 )
                        {
                        <option value="1" >Regular User</option>
                        <option value="2">Special User</option>
                        <option value="3" selected>Admin</option>
                        <option value="4">Blocked</option>
                        }
                        else
                        {
                            <option value="1" >Regular User</option>
                            <option value="2">Special User</option>
                            <option value="3">Admin</option>
                            <option value="4" selected>Blocked</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update User">
                </div>
            </form>
        </div>
    }
    else if(isAdmin == true&& isEdit == false)
    {
        <div class="container">
            <h2>Add User</h2>
            <form method="post" asp-action="SaveUserAsDbAdmin">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="Username" name="Username" required>
                </div>
                <div class="form-group">
                    <label for="Password">Password:</label>
                    <input type="password" id="Password" name="Password" required>
                </div>
                <div class="form-group">
                    <label for="Email">Email:</label>
                    <input type="Email" id="Email" name="Email" required>
                </div>
                <div class="form-group">
                    <label for="Role">Role:</label>
                    <select id="Role" name="Role" required>
                        <option value="1" selected >Regular User</option>
                        <option value="2">Special User</option>
                        <option value="3">Admin</option>
                        <option value="4" >Blocked</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add User">
                </div>
            </form>
        </div>
    }
    else
    {
        <div class="form-container">
            <h2>Language Form</h2>
            <form method="post">


                <div class="form-group">
                    <label for="description">You need admin permission to continue</label>
                </div>

            </form>
        </div>
    }
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
